<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true">
    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" android:background="#d50f161e">

        <!-- NewCode Form -->
        <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dip"
                android:padding="30dip"
                android:layout_centerVertical="true">
            <!-- Logo Start-->
            <ImageView android:src="@drawable/ic_launcher"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_gravity="center_horizontal"/>
            <!-- Logo Ends -->

            <EditText android:id="@+id/reg_email"
                      android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="35dip"
                      android:singleLine="true"
                      android:hint="Email"
                      android:layout_marginBottom="20dip"/>
            <!-- Send Code Button -->
            <Button android:id="@+id/btnSndCode"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dip"
                    android:text="Send Code" android:backgroundTint="#ffff397a" android:textColor="#ffffffff"/>
            <!-- status text view -->
            <TextView android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="10dip"
                      android:gravity="center"
                      android:textSize="12dip"
                      android:textColor="#e1ffd110" android:id="@+id/status"/>
            <!-- Link to Login Screen -->
            <TextView android:id="@+id/link_to_login"
                      android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="20dip"
                      android:text="Found my code!"
                      android:gravity="center"
                      android:textSize="20dip"
                      android:textColor="#fffffafa"/>

        </LinearLayout>
        <!-- NewCode Form Ends -->
    </RelativeLayout>
</ScrollView>